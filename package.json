{
  "name": "claude-run",
  "version": "0.1.0",
  "description": "A beautiful web UI for browsing Claude Code conversation history",
  "type": "module",
  "bin": {
    "claude-run": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "web-dist"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:server\"",
    "dev:server": "tsx watch src/index.ts --dev",
    "dev:web": "pnpm --filter @claude-run/web dev",
    "build": "pnpm build:shared && pnpm build:web && pnpm build:server",
    "build:shared": "pnpm --filter @claude-run/shared build",
    "build:web": "pnpm --filter @claude-run/web build && cp -r web/dist web-dist",
    "build:server": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "hono": "^4.7.8"
  },
  "devDependencies": {
    "@claude-run/shared": "workspace:*",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "conversation",
    "viewer",
    "streaming",
    "ai",
    "anthropic"
  ],
  "author": "Kamran Ahmed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamranahmedse/claude-run.git"
  },
  "homepage": "https://github.com/kamranahmedse/claude-run#readme",
  "bugs": {
    "url": "https://github.com/kamranahmedse/claude-run/issues"
  }
}
